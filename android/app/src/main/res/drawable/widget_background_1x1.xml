<?xml version="1.0" encoding="utf-8"?>
<!-- 1x1 Widget background with ENKA watermark - square with rounded corners -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base rounded rectangle background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#002A5C" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- ENKA logo watermark - fill the widget, semi-transparent -->
    <item
        android:gravity="fill"
        android:top="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp">
        <bitmap
            android:src="@drawable/enka_splash_logo"
            android:gravity="fill"
            android:alpha="0.25" />
    </item>
</layer-list>
