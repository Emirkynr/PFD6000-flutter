<?xml version="1.0" encoding="utf-8"?>
<!-- 1x4 Widget background with ENKA watermark -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base rounded rectangle background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#002A5C" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- ENKA logo watermark - centered, semi-transparent -->
    <item
        android:gravity="center"
        android:width="80dp"
        android:height="80dp">
        <bitmap
            android:src="@drawable/enka_splash_logo"
            android:gravity="center"
            android:alpha="0.15" />
    </item>
</layer-list>
