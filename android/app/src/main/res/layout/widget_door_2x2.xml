<?xml version="1.0" encoding="utf-8"?>
<!-- 2x2 Widget: Large tap target with door icon, name, and status -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container_2x2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Large door icon -->
    <ImageView
        android:id="@+id/widget_door_icon_2x2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_door"
        android:scaleType="centerInside"
        android:contentDescription="Door Icon" />

    <!-- Door name -->
    <TextView
        android:id="@+id/widget_door_name_2x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="8dp" />

    <!-- Status/action text -->
    <TextView
        android:id="@+id/widget_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giriş için dokun"
        android:textSize="11sp"
        android:textColor="#B0FFFFFF"
        android:maxLines="1"
        android:layout_marginTop="4dp" />

</LinearLayout>
